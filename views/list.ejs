<%- include('header'); -%> <!-- views/header.ejs로 header 분리 가능-->

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% items.forEach(element=> { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="hidden" name="listTitle" value="<%= listTitle %>">
          <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
          <p>
            <%= element.name %>
          </p>
        </div>
      </form>

      <% }); %>
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocapitalize="off">
          <button type="submit" name="button" value="<%= listTitle %>">+</button>
        </form>
  </div>

  <%- include('footer'); -%> <!-- views/footer.ejs로 footer 분리 가능-->